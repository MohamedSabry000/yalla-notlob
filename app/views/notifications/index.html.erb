<ul class="list-group">
    <% current_user.receiver_notification.each do |notification| %>
        <% if notification.category == "invite" %>
            <li class="list-group-item">
                <a class="" href="/orders/<%= notification.order.id %>" data-seen="false" data-id="<%= notification.id %>">
                <%= notification.sender.full_name %> Has Invited You to His Order
                </a>
            </li>
        <% else %>
            <li class="list-group-item">
                <a class="" href="/orders/<%= notification.order.id %>" data-seen="false" data-id="<%= notification.id %>">
                 <%= notification.sender.full_name %> Joined Your <%= notification.order.order_for %> </a>
            </li>
        <% end %>
    <% end %>
</ul>

    


